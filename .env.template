# WA_Tool Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ========================================
# CORE APPLICATION SETTINGS
# ========================================
APP_NAME=WA_Tool
APP_VERSION=3.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO

# ========================================
# SERVICE PORTS
# ========================================
WHATSAPP_BRIDGE_PORT=8080
BACKEND_PORT=5000
FRONTEND_PORT=3001
MCP_SERVER_PORT=3000

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Neon PostgreSQL Database URL
# Format: postgresql://username:password@host/database?sslmode=require
NEON_DATABASE_URL=postgresql://your_username:your_password@ep-example-123.us-east-1.aws.neon.tech/your_database?sslmode=require

# Database connection settings
DB_POOL_SIZE=10
DB_TIMEOUT=30

# ========================================
# GOOGLE SHEETS INTEGRATION
# ========================================
# Path to Google Service Account credentials JSON file
GOOGLE_SHEETS_CREDENTIALS_PATH=/path/to/your/credentials.json

# Google Spreadsheet ID (from the URL)
# Example: https://docs.google.com/spreadsheets/d/1TYxDLyCqDHr0Imb5j7X4uJhxccgJTO0KrDVAD0Ja0Dk/
GOOGLE_SHEETS_ID=1TYxDLyCqDHr0Imb5j7X4uJhxccgJTO0KrDVAD0Ja0Dk

# Google Sheets polling interval (seconds)
SHEETS_POLL_INTERVAL=30

# ========================================
# AI INTEGRATION (OpenRouter)
# ========================================
# OpenRouter API Key - Get from https://openrouter.ai
LLM_API_KEY=your_openrouter_api_key_here

# LLM Provider (openrouter, openai, anthropic)
LLM_PROVIDER=openrouter

# Model selection
# Free tier: x.ai/grok-2-1212:free
# Paid tier: anthropic/claude-3.5-sonnet
LLM_MODEL=x.ai/grok-2-1212:free

# AI generation parameters
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=500

# ========================================
# WHATSAPP CONFIGURATION
# ========================================
# WhatsApp session storage path
WA_SESSION_PATH=./store

# QR code timeout (seconds)
WA_QR_TIMEOUT=60

# Reconnection interval (seconds)
WA_RECONNECT_INTERVAL=30

# ========================================
# MONITORING CONFIGURATION
# ========================================
# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=60

# Log retention policy (days)
LOG_RETENTION_DAYS=30

# Enable metrics collection
METRICS_ENABLED=true

# ========================================
# PROJECT-SPECIFIC SETTINGS
# ========================================
# Comma-separated list of project groups to monitor
PROJECT_GROUPS=Velo Test,Lawley

# Default project for new installations
DEFAULT_PROJECT=Velo Test

# QA checking interval (seconds)
QA_CHECK_INTERVAL=30

# Feedback cooldown period (seconds) - prevents spam
FEEDBACK_COOLDOWN=300

# ========================================
# WHATSAPP GROUP MAPPINGS
# ========================================
# WhatsApp Group JID mappings for projects
VELO_TEST_GROUP_JID=120363421664266245@g.us
LAWLEY_GROUP_JID=120363418298130331@g.us

# ========================================
# SETUP CHECKLIST
# ========================================
# Before starting the application, ensure you have:
# 
# 1. ✅ Created Neon database and obtained connection URL
# 2. ✅ Set up Google Cloud project and enabled Sheets API  
# 3. ✅ Created Google Service Account and downloaded credentials.json
# 4. ✅ Shared your Google Spreadsheet with service account email
# 5. ✅ Created OpenRouter account and obtained API key
# 6. ✅ Configured WhatsApp group JIDs for your projects
# 7. ✅ Updated all placeholder values in this file
# 8. ✅ Renamed this file from .env.example to .env

